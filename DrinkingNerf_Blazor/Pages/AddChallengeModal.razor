@if (showModal)
{
    <div class="modal">
        <h3>Add Challenge</h3>
        <div class="form-group">
            <label for="challengeName">Name:</label>
            <input id="challengeName" @bind="newChallengeName" />
        </div>
        <div class="form-group">
            <label for="challengeDescription">Description:</label>
            <input id="challengeDescription" @bind="newChallengeDescription" />
        </div>
        <button @onclick="AddChallenge">Add Challenge</button>
    </div>
}

@code {
    private string newChallengeName = "";
    private string newChallengeDescription = "";

    [Parameter]
    public EventCallback<string> OnChallengeAdded { get; set; }
    private bool showModal = false;

    public void Show()
    {
        showModal = true;
    }

    private async Task AddChallenge()
    {
        // Call backend logic to add the new challenge
        // Update the UI or notify parent component
        await OnChallengeAdded.InvokeAsync(newChallengeName);
        newChallengeName = "";
        newChallengeDescription = "";
        showModal = false;
    }
}
